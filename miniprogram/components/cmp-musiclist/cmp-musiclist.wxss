
.list-container{
  position: relative;
  z-index: 100;
}

.music-index{
  color: #888;
  font-size: 34rpx;
  width: 80rpx;
}

.music-info{
  flex-grow: 1;
  width: 0;
}

.music-name{
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.music-alias{
  color: #888;
}

.music-singer{
  font-size: 24rpx;
  color: #888;
}

.playing .music-index,
.playing .music-name,
.playing .music-alias,
.playing .music-singer{
  color: #d43c33;
}


.music-item {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center; /* 垂直居中 */
}
