.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.ph-bar{
  color: #999;
}

.search {
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx!important;
  font-size: 24rpx;
  width: auto!important;
}

.find {
  position: absolute;
  top: 50%;
  transform: translate3d(16rpx, -50%, 0);
  color: #9f9f9f;
}

