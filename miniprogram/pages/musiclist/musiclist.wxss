.musiclist-container{
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.8;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.musiclist-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.musiclist-info{
  display: flex;
  align-items: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.musiclist-img{
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.musiclist-item{
  flex-grow: 1;
  line-height: 60rpx;
  width: 0;
}

.musiclist-name{
  font-size: 36rpx;
  color: #fff;
}
